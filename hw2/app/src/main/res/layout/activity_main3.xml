<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logoback"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="-25dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Future Company"
        android:textColor="#000000"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="302dp"
        android:layout_height="317dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="-356dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Your registration has been completed successfully, we will contact you soon"
        android:textColor="#300000"
        android:textSize="26dp" />

    <Button
        android:id="@+id/therest"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="-32dp"
        android:text="Click her"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="360dp"
        android:layout_height="41dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginEnd="-134dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/therest"
        android:text="Click her to fill out another CV :"
        android:textColor="#000000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="319dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/therest"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="-98dp"
        android:text="To contact with us :"
        android:textColor="#000000"
        android:textSize="22dp" />

    <Button
        android:id="@+id/contact"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="-87dp"
        android:text="e-mail"
        android:textSize="18dp" />

    <Button
        android:id="@+id/callme"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView11"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="-88dp"
        android:layout_toEndOf="@+id/contact"
        android:text="phone number"
        android:textSize="18dp" />

</RelativeLayout>




