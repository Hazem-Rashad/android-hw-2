<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logoback"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="303dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="-25dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Future Company"
        android:textColor="#000000"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="-82dp"
        android:text=" Your CV information"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/thename"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="-80dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#260345" />

    <EditText
        android:id="@+id/theage"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thename"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="-80dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#260345" />

    <EditText
        android:id="@+id/thejob"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/theage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="-80dp"
        android:ems="10"
        android:hint="Your job"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#260345" />

    <EditText
        android:id="@+id/thephone"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thejob"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="-80dp"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#260345" />

    <EditText
        android:id="@+id/theemail"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thephone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="-80dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#260345" />

    <Button
        android:id="@+id/button1"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/theemail"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="-103dp"
        android:backgroundTint="#150F0F"
        android:text="Next"
        android:textColor="#FFFEFE" />


</RelativeLayout>